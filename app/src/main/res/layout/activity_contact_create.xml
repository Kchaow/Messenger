<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactCreateActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/login_contact_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_title_lable"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/contact_create_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/error_contact_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_contact_layout"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/error_text"/>

    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/create_contact_button"
        android:layout_below="@id/error_contact_message"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_contact"/>



</RelativeLayout>